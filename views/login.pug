html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
    script(src='/jquery-3.3.1.js')
  body
    form(action="/login" method="POST")
      div(class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto")
        div(class="card card0 border-0")
          div(class="row d-flex")
            div(div class="col-lg-6")
              div(div class="card1 pb-5")
                div(class="row")
                  <img src="imagenes/img1.jpg" >
                div(class="row px-3 justify-content-center mt-4 mb-5 border-line")
                  
            div(class="col-lg-6")
              div(class="card2 card border-0 px-4 py-5")
                div(div class="row mb-4 px-3")
                  h1(class="mb-0 mr-4 mt-2") Iniciar Sesion
                div( class="row px-3 mb-4")
                  div(class="line")
                    small(class="or text-center")
                  div(class="line")
                  br
                div(class="row px-3")
                  label(class="mb-1") 
                    h6(class="mb-0 text-sm") CI Usuario 
                    input(type="text" class="mb-4" id="ci" name="ci" placeholder="Cedula Identidad")
                    br
                div(class="row px-3")
                  label(class="mb-1") 
                    h6(class="mb-0 text-sm") Password Usuario
                    input(type="password" id="password" name="password" placeholder="Password")
                    br
                div(class="row px-3 mb-4")
                  div(class="custom-control custom-checkbox custom-control-inline")
                    input(id="chk1" type="checkbox" name="chk" class="custom-control-input")
                    label(for="chk1" class="custom-control-label text-sm" onclick="Mostrar()") Mostrar Passsword
                div(class="d-grid gap-2 col-6 mx-auto")
                  button(type="submit" class="btn btn-success") Login
                  
          div(class="bg-blue py-4")
            div(class="row px-3")
              small(class="ml-4 ml-sm-5 mb-2") Author Omar Marca T.
      script.
        function Mostrar() {
          var x = document.getElementById("password");
          if (x.type === "password") {
            x.type = "text";
          } else {
            x.type = "password";
          }
        }